{
  "name": "fx-private-relay",
  "version": "1.0.0",
  "description": "Firefox Private Relay",
  "main": "index.js",
  "dependencies": {
    "web-ext": "^3.2.0"
  },
  "devDependencies": {},
  "scripts": {
    "build": "sed -i '' 's/:8000//g'  manifest.json js/background.js popup.html && sed -i '' 's@http://127.0.0.1@'\"$RELAY_DOMAIN\"'@g'  manifest.json js/background.js popup.html && web-ext build --overwrite-dest -s . -a ../static/downloads/addon/latest/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/fx-private-relay.git"
  },
