{
  "manifest_version": 2,
  "name": "Private Relay",
  "version": "1.0",

  "description": "Private Relay provides generated email addresses to use in place of personal email addresses.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "background": {
      "scripts": ["js/background.js"]
  },

  "content_scripts": [
    {
      "matches": [
          "http://127.0.0.1/accounts/profile/",
          "https://dev.fxprivaterelay.nonprod.cloudops.mozgcp.net/accounts/profile/",
          "https://stage.fxprivaterelay.nonprod.cloudops.mozgcp.net/accounts/profile/",
          "https://relay.firefox.com/accounts/profile/"
      ],
      "js": ["js/get_profile_data.js"]
    }
  ],

  "permissions": [
      "<all_urls>",
      "storage",
      "menus"
  ]

}
